<Window x:Class="DictionaryApp.DeleteWord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp"
        mc:Ignorable="d"
        Title="DeleteWord" Height="450" Width="800"  Background="#FFF7F7F7">
    <Grid>
        <TextBox x:Name="deleteWordTxt" HorizontalAlignment="Left" Height="40" Margin="271,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextChanged="TextBox_TextChanged"/>

        <Button Content="Back" HorizontalAlignment="Left" Margin="129,321,0,0" VerticalAlignment="Top" Width="116" Height="37" Click="Button_Click_1" FontSize="18" FontFamily="Courier New" FontWeight="Bold" Background="#FFB25254" Foreground="White"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="550,321,0,0" VerticalAlignment="Top" Width="116" Height="37" Click="Button_Click" FontSize="18" FontFamily="Courier New" FontWeight="Bold" Background="#FFB25254" Foreground="White"/>

    </Grid>
</Window>
